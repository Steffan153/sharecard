*,
*::before,
*::after {
  box-sizing: border-box;
  font-family: Muli, sans-serif;
}

body {
  margin: 0;
  padding: 0;
  background: #f6f9ff;
}

.container {
  height: 99vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.card {
  background: #fff;
  box-shadow: 0px 25px 40px rgba(155, 172, 207, 0.525514);
  border-radius: 20px;
  padding: 76px;
  padding-top: 60px;
  position: relative;
}
.card .title {
  font-weight: 900;
  font-size: 36px;
  color: #0c1226;
  line-height: 150%;
  max-width: 80%;
}
.card .close {
  position: absolute;
  top: 30px;
  right: 45px;
}
.card .close .cl {
  height: 22px;
  border-right: 2.75px solid #202842;
  position: absolute;
}
.card .close .cl:first-child {
  transform: rotate(45deg);
}
.card .close .cl:last-child {
  transform: rotate(-45deg);
}
.card .search {
  margin-top: 30px;
}
.card .search input {
  border-radius: 43px;
  border: 2px solid #d7e0f2;
  outline: none;
  padding: 21px 35px;
  width: 100%;
  padding-left: 70px;
  background: url(images/search.svg) no-repeat scroll 18px 12px;
  font-weight: bold;
  font-size: 22px;
  color: #8b91a1;
}
.card .search input::placeholder {
  font-weight: bold;
  color: #8b91a1;
}
.card .sgg .suggested {
  font-size: 18px;
  color: #0c1226;
  font-weight: bold;
  margin-bottom: 20px;
  margin-top: 40px;
}
.card .sgg .users {
  display: flex;
  flex-flow: row wrap;
}
.card .sgg .users .user {
  border: 2px solid #d7e0f2;
  border-radius: 13px;
  padding: 20px;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-right: 15px;
  margin-bottom: 15px;
}
.card .sgg .users .user img {
  margin-right: 10px;
}
.card .sgg .users .user .right {
  color: #0c1226;
}
.card .sgg .users .user .right .name {
  font-size: 18px;
  font-weight: 900;
}
.card .sgg .users .user .right .tag {
  font-size: 16px;
  margin-top: 10px;
}